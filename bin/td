#!/bin/bash
#todoを入力すると，その内容を，入力した日時とともに記録する。todoが終了すると，その日時を記録して，終了したというフラグをたてる。
#検索機能があり，終了していないもの，終了したもの，全てで，検索できる。日時の範囲も指定して検索できる。
#表示は，終了したもの，していないもの，全てでできる。
#
#こんなプログラムを書くよりも，ファイル名をエイリアスにした方が楽だったかもしれない。
#
source lib_td_const.bash
if [ $# -eq 0 ];then
    less $dir$notYet
elif [ $# -eq 1 ];then
    if [ "$1" = "-a" ];then
     	cat $dir$notYet
    elif [ "$1" = "-f" ];then
	less $dir$finished
    elif [ "$1" = "-fa" ];then
	cat $dir$finished
    elif [ "$1" = "-t" ];then
	cat $dir$notYet $dir$finished | less
    elif [ "$1" = "-ta" ];then
	cat $dir$notYet $dir$finished
    elif [ "$1" = "-e" ];then
	lib_td.bash $message_2
    else
	lib_td.bash $message_1 $@
    fi
else
    lib_td.bash $message_1 $@
fi    
